<?xml version="1.0"?>
<odoo>
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form,search</field>
    </record>

    <record id="estate_property_type_view" model="ir.ui.view">
        <field name="name">Property Types</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="property_ids" string="Properties" options="{'no_create': true, 'no_quick_create': true}" />
                <field name="offer_ids" string="Offers" options="{'no_create': true, 'no_quick_create': true}" />
            </list>
        </field>
    </record>

    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">Property Type Form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        class="oe_stat_button"
                        name="%(estate.estate_property_offer_action)s"
                        type="action" icon="fa-money"
                        string="Offers" help="View related offers"
                        invisible="offer_count == 0"
                    >
                        <field name="offer_count" string=' Offer(s)' widget="statinfo" />
                    </button>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="property_ids" options="{'no_create': true, 'no_quick_create': true}">
                            <list>
                                <field name="expected_price" />
                                <field name="state" />
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>